{
  "is_service": true,
  "system_usage": {
    "limit": {
      "cpu": "0.5",
      "memory": "123"
    },
    "requested": {
      "cpu": "0.2",
      "memory": "100"
    }
  },
  "scaling": {
    "minPods": 1,
    "maxPods": 1000,
    "configuration": {
      "01": {
        "type": "AverageValue",
        "average": "0.15"
      },
      "02": {
        "type": "Utilization",
        "average": "0.25"
      }
    }
  },
  "variable": {
    "variable_config": {
      "type": "global",
      "file": "foo.json"
    }
  },
  "job": {
    "sql_default_migration": {
      "type": "scoped",
      "definition": {
        "on": "post-install, post-upgrade",
        "image": "app__backend__packages__node__app__module__orm__migrator__source"
      },
      "binding": {
        "ROOT_PASSWORD": "global_database.environment.auth.rootPassword",
        "DATABASE_ADDRESS": "global_database.origin_name_var"
      }
    },
    "backup_sql": {
      "type": "global",
      "definition": {
        "on": "pre-upgrade",
        "image": "app__backend__packages__node__app__module__orm__migrator__backup__source"
      },
      "binding": {
        "example_data": "example"
      },
      "variable": {
        "example": {
          "type": "global",
          "file": "foo.json"
        }
      }
    }
  },
  "service": {
    "global_database": {
      "type": "global",
      "origin_name_var": "fullnameOverride",
      "definition": {
        "origin": {
          "repository": "https://charts.bitnami.com/bitnami",
          "version": "14.x.x",
          "name": "mariadb"
        }
      },
      "environment": {
        "auth.forcePassword": {
          "default": true
        },
        "auth.rootPassword": {
          "default": "should be generated"
        },
        "example.config": {
          "file": "foo.json"
        }
      }
    },
    "scoped_database": {
      "type": "scoped",
      "origin_name_var": "fullnameOverride",
      "definition": {
        "origin": {
          "repository": "https://charts.bitnami.com/bitnami",
          "version": "14.x.x",
          "name": "mariadb"
        }
      },
      "environment": {
        "auth.forcePassword": {
          "default": true
        },
        "auth.rootPassword": {
          "default": "should be generated"
        },
        "example.config": {
          "file": "foo.json"
        }
      }
    }
  },
  "expose": {
    "80": {
      "type": "load-balancer",
      "path": "/",
      "domainPrefix": "test"
    },
    "5000": {
      "type": "internal"
    }
  }
}
