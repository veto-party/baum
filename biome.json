{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "experimentalScannerIgnores": ["**/node-modules/**/*", "**/dist/**/*", "**/build/**/*", "./docs/schema/**/*", "core/src/index.ts", "docs/schema/steps/helm"],
    "ignoreUnknown": true
  },
  "overrides": [{
    "includes": ["docs/schema/steps/helm"],
    "json": {
      "formatter": {
        "enabled": false
      }
    }
  }],
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":URL:", ":NODE:"]
          }
        }
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useImportType": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noSparseArray": "off",
        "noAsyncPromiseExecutor": "off",
        "noConfusingVoidType": "off",
        "noThenProperty": "off"
      },
      "complexity": {
        "noUselessEmptyExport": "off",
        "noBannedTypes": "off",
        "noForEach": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "correctness": {
        "noVoidTypeReturn": "off",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 320
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "none"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2
    }
  }
}
